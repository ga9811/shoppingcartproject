@{
}
@model IEnumerable<NewShoppingCart.Models.ItemModel>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Goods</h1>*@

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div>
    <img src="~/lib/assets/images/grocery.png" style="height:50px;width:50px" />
</div>
<form asp-action="Order" method="post">
    <input type="hidden" name="UserId" value="@ViewBag.UserId" />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.qty)
                </th>
                <th>Order Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.qty)
                    </td>
                    <td>

                        <input type="number" name="orderAmounts[@item.id]" min="1" max="@item.qty" placeholder="amount" id="orderAmount_@item.id" />
                    </td>
               @*     <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a> |

                    </td>*@
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Submit Order" class="btn btn-primary" />
</form>

